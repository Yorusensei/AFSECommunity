{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Champion",
	"description": "Schema for champion/character data",
	"type": "array",
	"items": {
		"type": "object",
		"required": ["name", "chance", "cost", "board", "desc", "stats"],
		"properties": {
			"name": {
				"type": "string",
				"description": "Name of the champion/character"
			},
			"chance": {
				"type": "string",
				"description": "Chance/drop rate of obtaining the champion"
			},
			"cost": {
				"type": "string",
				"description": "Cost to obtain the champion"
			},
			"board": {
				"type": "integer",
				"description": "Board number/category (1-3)"
			},
			"desc": {
				"type": "string",
				"description": "Description of the champion's abilities and effects"
			},
			"stats": {
				"type": "object",
				"required": ["base", "modifiers"],
				"properties": {
					"base": {
						"type": "object",
						"properties": {
							"strength": {
								"type": "number",
								"description": "Strength value"
							},
							"sword": {
								"type": "number",
								"description": "Sword value"
							},
							"durability": {
								"type": "number",
								"description": "Durability value"
							},
							"agility": {
								"type": "number",
								"description": "Agility and Speed value"
							},
							"chakra": {
								"type": "number",
								"description": "Chakra value"
							}
						},
						"additionalProperties": false
					},
					"modifiers": {
						"type": "object",
						"properties": {
							"punch": {
								"type": "object",
								"properties": {
									"outgoing_damage_increase": {
										"type": "number",
										"description": "Outgoing damage increase percentage",
										"minimum": 0,
										"maximum": 1
									}
								},
								"required": ["outgoing_damage_increase"],
								"additionalProperties": false
							},
							"strength": {
								"type": "object",
								"properties": {
									"incoming_damage_decrease": {
										"type": "number",
										"description": "Incoming damage decrease percentage",
										"minimum": 0,
										"maximum": 1
									}
								},
								"required": ["incoming_damage_decrease"],
								"additionalProperties": false
							},
							"chakra": {
								"type": "object",
